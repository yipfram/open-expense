# App
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=Open-expense
NEXT_PUBLIC_APP_URL=http://localhost:3000
PORT=3000
BETTER_AUTH_URL=http://localhost:3000
BETTER_AUTH_SECRET=change-me-in-local-env

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/open_expense

# Auth + Invitations (Milestone 1)
AUTH_SIGNUP_MODE=invite_only

# SMTP (future milestones)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM="[Open-expense] <no-reply@example.com>"

# S3-compatible object storage (future milestones)
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_BUCKET=open-expense
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_FORCE_PATH_STYLE=true
