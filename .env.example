# App
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=Open-expense
NEXT_PUBLIC_APP_URL=http://localhost:3000
PORT=3000
BETTER_AUTH_URL=http://localhost:3000
BETTER_AUTH_SECRET=change-me-in-local-env

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/open_expense
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=open_expense

# Auth + Invitations
AUTH_SIGNUP_MODE=invite_only
# Canonical bootstrap admin email(s) that bypass invite code in `invite_only` mode
AUTH_ADMIN_EMAIL=
# Backward-compatible alias (optional)
AUTH_ADMIN_EMAILS=

# SMTP
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM="[Open-expense] <no-reply@example.com>"

# S3-compatible object storage (Milestone 2 receipt uploads)
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_BUCKET=open-expense
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_FORCE_PATH_STYLE=true
